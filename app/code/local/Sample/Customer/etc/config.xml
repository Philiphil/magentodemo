<?xml version="1.0"?>
<config>
    <modules>
        <Sample_Customer>
            <version>0.1.0</version>
        </Sample_Customer>
    </modules>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <sample_customer_adminhtml_addcolumn>
                        <type>singleton</type>
                        <class>sample_customer/observer</class>
                        <method>addColumn</method>
                    </sample_customer_adminhtml_addcolumn>
                </observers>
            </core_block_abstract_prepare_layout_before>
            <eav_collection_abstract_load_before>
                <observers>
                    <sample_customer_adminhtml_addloadcolumn>
                        <type>singleton</type>
                        <class>sample_customer/observer</class>
                        <method>beforeActionLoad</method>
                    </sample_customer_adminhtml_addloadcolumn>
                </observers>
            </eav_collection_abstract_load_before>
        </events>
    </adminhtml>
    <global>
        <resources>
			<sample_customer_setup>
				<setup>
					<module>Sample_Customer</module>
					<class>Mage_Customer_Model_Resource_Setup</class> <!--mega important
                    
					<class>Mage_Customer_Model_Resource_Eav_Mysql4_Setup</class> 
					-->
				</setup>
			</sample_customer_setup>
        </resources>
        <models>
            <sample_customer>
                <class>Sample_Customer_Model</class>
            </sample_customer>
            <sales>
                <quote>
                    <item>
                        <product_attributes>
                        <!-- 
                        attribut 
                        produit 
                        perso-->
                        </product_attributes>
                    </item>
                </quote>
            </sales>
        </models>
    </global>
</config>