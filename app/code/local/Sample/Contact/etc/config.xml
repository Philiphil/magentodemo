<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Sample_Contact>
			<version>0.1.2</version>
		</Sample_Contact>
	</modules>
	<global>
		<resources>
			<sample_contact_setup>
				<setup>
					<module>Sample_Contact</module>
					<class>Mage_Customer_Model_Resource_Setup</class> <!--mega important
					<class>Mage_Customer_Model_Resource_Eav_Mysql4_Setup</class> 
					-->
				</setup>
			</sample_contact_setup>
		</resources>
		<models>
			<sample_contact>
				<class>Sample_Contact_Model</class>
				<resourceModel>sample_contact_resource</resourceModel>
			</sample_contact>
			<sample_contact_resource>
				<class>Sample_Contact_Model_Resource</class>
				<entities>
					<contact>
						<table>contact</table>
					</contact>
					<clider>
						<table>clider</table>
					</clider>
				</entities>
			</sample_contact_resource>
		</models>
		<events>
			<add_contact_done>
				<observers>
					<sample_contact_add_handler>
						<type>Singleton</type>
						<class>sample_contact/observer</class>
						<method>handler</method>
					</sample_contact_add_handler>
				</observers>
			</add_contact_done>
		</events>
		<blocks>
			<sample_contact>
				<class>Sample_Contact_Block</class>
			</sample_contact>
		</blocks>
		<helpers>
			<sample_contact>
				<class>Sample_Contact_Helper</class>
			</sample_contact>
		</helpers>
	</global>
	<frontend>
		<translate>
			<modules>
				<Sample_Contact>
					<files>
						<default>Sample_Contact.csv</default>
					</files>
				</Sample_Contact>
			</modules>
		</translate>
		<routers>
			<Sample_Contact>
				<use>standard</use>
				<args>
					<module module="Sample_Contact">Sample_Contact</module>
					<frontName>contact</frontName>
				</args>
			</Sample_Contact>
		</routers>
		<layout>
			<updates>
				<sample_contact>
					<file>sample_contact.xml</file>
				</sample_contact>
			</updates>
		</layout>
	</frontend>
	<admin>
		<routers>
			<adminhtml>
				<use>admin</use>
				<args>
					<modules>
						<Sample_Adminhtml before="Mage_Adminhtml">Sample_Contact_Adminhtml</Sample_Adminhtml>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<Sample_Adminhtml>
					<file>sample_clider.xml</file>
				</Sample_Adminhtml>
			</updates>
		</layout>
	</adminhtml>
</config>